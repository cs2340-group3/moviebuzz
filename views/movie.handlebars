<link href="/vendor/raty/lib/jquery.raty.css" rel="stylesheet">
<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h3>{{movie.title}}
        <small>({{movie.year}})</small>
      </h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <img src="{{movie.posters.detailed}}" width="243" height="360"></img>
    </div>

    <div class="col-md-4">

      <h4 style="margin-top:0px">Critics Score: {{movie.ratings.critics_score}}%</h4>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:{{movie.ratings.critics_score}}%"></div>
      </div>

      <h4>Audience Score: {{movie.ratings.audience_score}}%
        <small>liked it</small>
      </h4>
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:{{movie.ratings.audience_score}}%"></div>
      </div>

      <h4>Your Rating</h4>
      <form id="rating-form" method="POST" action="/movie/{{movie.id}}/rate">
        <div class="input-group">
          <div id="user-score"></div>
          <div class="form-group">
            <textarea style="margin: 0px; width: 362px; height: 181px" class="form-control" name="review" placeholder="Type your review..." name="keyword" id="review">{{userRating.review}}</textarea>
          </div>
          <div class="form-group">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
          </div>
          <button type="submit" class="btn btn-default btn-primary">Submit Rating</button>
        </div>
      </form>

    </div>

    <div class="col-md-5">
      <p>Year: {{movie.year}}</p>
      <!-- The Following code does not work -->
      <p>Director(s):
        {{#each movie.abridged_directors}}
          <span>{{name}}&nbsp;</span>
        {{/each}}
      </p>
      <p>Cast:
        {{#each movie.abridged_cast}}
          {{name}}&nbsp;
        {{/each}}
      </p>
      <p>Genres:
        {{#each movie.genres}}{{this}}{{/each}}
      </p>
    </div>
  </div>

</div>
<script src="/vendor/raty/lib/jquery.raty.js"></script>
<script>
  $('#user-score').raty({
    {{#if userRating}}
      score: {{userRating.score}},
    {{/if}}
    path: '/vendor/raty/lib/images'
    , starType : 'i'
  });
</script>
