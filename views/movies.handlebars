<style>

  body{
    background: url('/poppcornBackground.jpg');
    background-repeat: no-repeat;
    background-attachment: fixed;
    
  }
</style>

<ul class="movie_list">
  {{#each movies}}


<div class = "row">
<div class="col-md-3">
</div>
<div class="col-md-6">
<div class ="panel panel-info">
<div class = "panel-heading"> <a href="/movie/{{this.id}}">{{this.title}}</a> ({{this.year}})</div>
<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object" src="{{this.posters.detailed}}" alt="moviePoster">
    </a>
  </div>
  <div class="media-body">
    
    
   <p>Description : {{this.synopsis}} </p>
  
   
    <p>Rated : {{this.mpaa_rating}} </p>
  </div>
</div>
</div>
</div>
</div>

        
    
  {{else}}
    <p>No result</p>
  {{/each}}
  
</ul>




